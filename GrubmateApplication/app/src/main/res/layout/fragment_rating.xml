<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/side_margin"
    android:layout_marginLeft="@dimen/side_margin"
    android:layout_marginTop="@dimen/vertical_margin"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context="cs310.fidgetspinners.grubmate.ui.RatingFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_rating_fragment"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:max="5"
        android:numStars="5"
        android:rating="5"
        android:stepSize="0.5"
        app:theme="@style/RatingBar"/>

    <EditText
        android:id="@+id/review_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Place a review (optional)"
        android:layout_marginBottom="25dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/ratingSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Submit Rating"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_rating"
        android:text="Cancel"
        android:background="@color/white"
        android:textColor="@color/colorAccent"
        />

</LinearLayout>
